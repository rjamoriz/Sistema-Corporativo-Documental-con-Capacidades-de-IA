# DataStax Astra DB Configuration
# Get your credentials from: https://astra.datastax.com

# Astra DB Connection (REQUIRED)
ASTRA_DB_TOKEN=AstraCS:xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ASTRA_DB_API_ENDPOINT=https://xxxxx-xxxx-xxxx.apps.astra.datastax.com
ASTRA_DB_KEYSPACE=financia_vectors
ASTRA_DB_COLLECTION=documents

# Service Configuration
SERVICE_PORT=8006
LOG_LEVEL=INFO

# Embedding Services
# OpenAI (Recommended for production)
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Cohere (Alternative)
COHERE_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# GPU Embedding Service Integration
USE_GPU_EMBEDDINGS=true
GPU_EMBEDDING_URL=http://gpu-embedding-service:8001

# Redis Cache
ENABLE_CACHE=true
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Document Processing
DEFAULT_CHUNK_SIZE=500
DEFAULT_CHUNK_OVERLAP=50

# Vector Search
DEFAULT_TOP_K=5
DEFAULT_MIN_SCORE=0.0

# Monitoring
ENABLE_METRICS=true
