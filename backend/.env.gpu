# ========================================
# GPU Embedding Service Configuration
# ========================================

# Feature Flag: Activar/Desactivar GPU Embeddings
USE_GPU_EMBEDDINGS=false  # Cambiar a 'true' para activar

# URL del GPU Embedding Service
GPU_EMBEDDING_URL=http://localhost:8001

# Timeout para llamadas al GPU service (segundos)
GPU_EMBEDDING_TIMEOUT=30

# ========================================
# Quantum Services Configuration (Opcional)
# ========================================

# Feature Flags
USE_QUANTUM_DEDUPE=false
USE_QUANTUM_OPTIMIZE=false
USE_RAG_ENHANCED=false

# URLs
QUANTUM_DEDUPE_URL=http://localhost:8002
QUANTUM_OPTIMIZE_URL=http://localhost:8003
RAG_ENHANCED_URL=http://localhost:8005

# Timeouts
QUANTUM_TIMEOUT=60
RAG_TIMEOUT=60

# ========================================
# Monitoring
# ========================================

# Prometheus metrics endpoint
ENABLE_METRICS=true
METRICS_PORT=9091
